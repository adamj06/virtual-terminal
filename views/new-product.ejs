<%- include("partials/header") -%>

<div class="container">
  <h1>New Customer</h1>
  <form id="customer-form" method="post">
    <div class="form-group">
      <label for="customerName">Full Name <span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="customerName" name="customerName" required="true">
    </div>
    <div class="form-group">
      <label for="customerEmail">Email <span class="text-danger">*</span></label>
      <input type="email" class="form-control" id="customerEmail" name="customerEmail" required="true">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
  </form>
</div>

<%- include("partials/footer") -%>
